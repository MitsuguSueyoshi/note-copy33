%div.my-notes__container
  %div.my-notes__container__area
    %div.my-notes__title
      %p ノート一覧
    %ul.my-notes__head
      %li 5ノート
      %li.my-notes__head__items
        %ul
          %li
            = link_to "公開ステータス", ""
          %li
            = link_to "期間", ""
          %li
            = link_to "マガジン", ""
    - @my_notes.each do |note|
      %ul.my-notes__list
        %li
          %div.selection__box.note__item
            %i.far.fa-circle
          %div.my-note.note__item
            %div.my-note__title
              = note.title
            %div.my-note__date
              = note.created_at
          %div.image.note__item
            - if note.images.present?
              -note.images.each do |image|
                = image_tag image.image
          %div.edit__button.note__item
            = link_to "編集", edit_note_path(note)
          %div.delete__button.note__item
            %i.fas.fa-ellipsis-h


= render 'shared/header-nav'

%div.home__container
  %div.home__container__cards
    - @notes.each do |note|
      %div.card
        %div.card__avatar
          %ul
            %li.icon
              = link_to image_tag('/assets/icon_image1.jpeg')
            %li.info
              %a{href: "", class: "name" }野比のび太
              %a{href: "", class: "date"} 2018/11/22 16:22
        %div.card__main
          =link_to note_path(note) do
            %div.card__main--image
              - if note.images.present?
                -note.images.each do |image|
                  = image_tag image.image
            %h3.card__main--title
              = note.title
            %p.card__main--text
              = note.text
        %div.card__foot
          %ul.icon
            %li.icon__box
              = link_to "" do
                %i.far.fa-heart
                %div.like__count 21
            %li.icon__box
              = link_to "" do
                %i.fas.fa-arrow-right
            %li.icon__box
              = link_to "" do
                %i.fas.fa-plus
            - if note.user.id == current_user.id
              %li.icon__box
                = link_to "/notes/#{note.id}", method: :delete do
                  %p 削除
                / %i.fas.fa-ellipsis-h 後で使用
          %div.comment__link
